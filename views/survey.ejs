  <title>SURVEY</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <h1>SURVEY - Job Number: <%= job.number %>
  </h1>
  <form action="/jobs/<%= job._id %>/survey" method="POST">
    <table>
      <thead>
        <tr>
          <th>Point</th>
          <th>HI</th>
          <th>BS</th>
          <th>FS</th>
