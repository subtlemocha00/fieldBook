          <td><input id="benchmark" name="benchmark" type="text" placeholder="Benchmark Elevation"></td>
          <td></td>
          <td></td>
          <td><input name="bmForesight" type="text" placeholder="Foresight"></td>
          <td></td>
          <td><input name="bmElevation" type="text" placeholder="Benchmark Elevation"></td>
          <td></td>
        </tr>
        <!-- </form> -->
      </thead>

      <tbody>
        <tr>
          <td><input name="point" type="text"></td>
          <td></td>
          <td><input name="backsight" type="text"></td>
          <td><input name="foresight" type="text"></td>
          <td></td>
          <td><input name="elevation" type="text"></td>
          <td><input name="notes" type="text"></td>
        </tr>
      </tbody>
    </table>
    <button class="btn btn-outline-primary" type="submit">CONFIRM BENCHMARK</button>
    <button class="btn btn-outline-primary" type="submit">ADD LINE</button>
  </form>


</body>

</html>